{
  "version": "1.0",
  "description": "Master Implant Checklist – Dynamic, Planning-Driven",
  "phases": [
    {
      "id": "pre_surgical_planning",
      "name": "Pre-Surgical Planning",
      "order": 1,
      "sections": [
        {
          "id": "clinical_evaluation",
          "name": "Clinical Evaluation",
          "items": [
            { "id": "cbct_opg_review", "text": "CBCT scan and OPG reviewed", "importance": "essential", "conditions": { "requiresImaging": true }, "assignedRole": "implantologist" },
            { "id": "bone_quality_quantity", "text": "Bone quality and quantity assessed", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "adjacent_opposing_teeth", "text": "Adjacent and opposing teeth evaluated", "importance": "essential", "assignedRole": "prosthodontist" },
            { "id": "soft_tissue_evaluation", "text": "Soft tissues evaluated", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "medical_history_review", "text": "Medical history reviewed (physician consent, blood tests, contraindicating medications, antibiotic prophylaxis)", "importance": "essential", "assignedRole": "clinician" },
            { "id": "esthetic_expectations", "text": "Esthetic expectations discussed with patient", "importance": "essential", "conditions": { "estheticZone": true }, "assignedRole": "prosthodontist" },
            { "id": "rx_finalized", "text": "Treatment plan finalized (constraints, budget, timelines, post-op care)", "importance": "essential", "assignedRole": "clinician" },
            { "id": "informed_consent", "text": "Informed consent obtained", "importance": "essential", "assignedRole": "clinician" },
            { "id": "prosthetic_driven_position", "text": "Implant position planned prosthetically (restoration-driven)", "importance": "essential", "assignedRole": "prosthodontist" },
            { "id": "diagnostic_impressions", "text": "Diagnostic impressions made", "importance": "advanced", "assignedRole": "assistant" },
            { "id": "clinical_photos", "text": "Clinical photographs taken", "importance": "advanced", "assignedRole": "assistant" },
            { "id": "implant_specs_locked", "text": "Implant specifications finalized (diameter, length, platform, brand)", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "implant_timing_protocol", "text": "Implant timing protocol decided", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "augmentation_planned", "text": "Hard or soft tissue augmentation planned if required", "importance": "advanced", "conditions": { "needsGBR": true }, "assignedRole": "implantologist" }
          ]
        },
        {
          "id": "lab_case_setup",
          "name": "Lab Communication – Case Setup",
          "isLabSection": true,
          "items": [
            { "id": "precase_consult_form", "text": "Pre-case consultation form sent to lab", "importance": "essential", "assignedRole": "assistant" },
            { "id": "virtual_surgery", "text": "Virtual surgery planned with lab", "importance": "advanced", "conditions": { "guideRequired": true }, "assignedRole": "implantologist" },
            { "id": "surgical_guide_discussion", "text": "Need for surgical guide/stent discussed", "importance": "essential", "conditions": { "guideRequired": true }, "assignedRole": "implantologist" },
            { "id": "provisionalization_specs", "text": "Provisionalization specifications discussed", "importance": "essential", "conditions": { "provisionalization": true }, "assignedRole": "prosthodontist" },
            { "id": "complete_denture_plan", "text": "Plan for complete denture discussed (if applicable)", "importance": "advanced", "conditions": { "prostheticType": ["complete_denture"] }, "assignedRole": "prosthodontist" },
            { "id": "abutment_capability", "text": "Confirmed lab can accommodate abutment selection", "importance": "essential", "assignedRole": "prosthodontist" },
            { "id": "margin_location_discussion", "text": "Margin location requirements discussed", "importance": "essential", "assignedRole": "prosthodontist" },
            { "id": "turnaround_policy", "text": "Turnaround time and remake policy confirmed", "importance": "essential", "assignedRole": "assistant" },
            { "id": "esthetic_photos_shared", "text": "Esthetic photos and concerns shared with lab", "importance": "advanced", "conditions": { "estheticZone": true }, "assignedRole": "assistant" },
            { "id": "lab_contact", "text": "Lab point of contact established", "importance": "essential", "assignedRole": "assistant" }
          ]
        }
      ]
    },

    {
      "id": "surgical_treatment",
      "name": "Surgical Treatment",
      "order": 2,
      "sections": [
        {
          "id": "surgery_execution",
          "name": "Surgical Execution",
          "items": [
            { "id": "verify_site_tooth", "text": "Surgical site and tooth number verified", "importance": "essential", "assignedRole": "assistant" },
            { "id": "preop_medications", "text": "Pre-operative medications administered", "importance": "essential", "assignedRole": "assistant" },
            { "id": "guide_available", "text": "Surgical guide/stent available chairside", "importance": "essential", "conditions": { "guideRequired": true }, "assignedRole": "assistant" },
            { "id": "site_prepared_anesthesia", "text": "Surgical site prepared and anesthetized", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "osteotomy_prepared", "text": "Osteotomy prepared to planned depth", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "implant_positioned", "text": "Implant placed at correct angulation", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "primary_stability", "text": "Primary stability achieved", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "torque_recorded", "text": "Insertion torque recorded", "importance": "essential", "assignedRole": "assistant" },
            { "id": "cover_or_healing_abutment", "text": "Cover screw or healing abutment placed", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "implant_position_verified", "text": "Implant position verified clinically and radiographically", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "soft_tissue_closure", "text": "Soft tissue closure completed", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "surgery_documented", "text": "Implant details and post-operative instructions documented", "importance": "essential", "assignedRole": "assistant" }
          ]
        }
      ]
    },

    {
      "id": "maintenance",
      "name": "Ongoing Maintenance",
      "order": 8,
      "sections": [
        {
          "id": "six_month_recall",
          "name": "6-Month Recall",
          "items": [
            { "id": "maintenance_radiograph", "text": "Radiograph taken to assess bone stability", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "probing", "text": "Probing performed (<4mm, no BOP)", "importance": "essential", "assignedRole": "implantologist" },
            { "id": "occlusion_check_maintenance", "text": "Occlusion checked", "importance": "essential", "assignedRole": "prosthodontist" },
            { "id": "professional_cleaning", "text": "Professional implant maintenance performed", "importance": "essential", "assignedRole": "assistant" }
          ]
        }
      ]
    }
  ]
}
