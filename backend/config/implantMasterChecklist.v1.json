{
  "version": "1.0",
  "description": "Master Implant Checklist - Comprehensive 8-Phase Protocol",
  "phases": [
    {
      "id": "phase1_diagnostic",
      "title": "PHASE 1 — DIAGNOSTIC & TREATMENT PLANNING",
      "description": "Initial assessment and surgical planning",
      "sections": [
        {
          "title": "Clinical & Radiographic Assessment",
          "isLabSection": false,
          "items": [
            {
              "id": "diag_001",
              "text": "Review complete medical & surgical history",
              "importance": "essential"
            },
            {
              "id": "diag_002",
              "text": "Assess esthetic zone and patient expectations",
              "importance": "essential",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "diag_003",
              "text": "Document existing dentition status",
              "importance": "advanced"
            },
            {
              "id": "diag_004",
              "text": "Evaluate bone volume (height, width) via CBCT",
              "importance": "essential"
            },
            {
              "id": "diag_005",
              "text": "Assess GBR requirements",
              "importance": "essential",
              "conditions": {
                "boneAvailability": "insufficient"
              }
            },
            {
              "id": "diag_006",
              "text": "Evaluate soft tissue adequacy",
              "importance": "advanced"
            }
          ]
        },
        {
          "title": "Surgical Planning",
          "isLabSection": false,
          "items": [
            {
              "id": "plan_001",
              "text": "Determine implant system, platform & connection",
              "importance": "essential"
            },
            {
              "id": "plan_002",
              "text": "Assess surgical guide requirement",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "plan_003",
              "text": "Plan for immediate placement (if extraction)",
              "importance": "essential",
              "conditions": {
                "implantTiming": "immediate"
              }
            },
            {
              "id": "plan_004",
              "text": "Plan for delayed placement protocol",
              "importance": "essential",
              "conditions": {
                "implantTiming": "delayed"
              }
            },
            {
              "id": "plan_005",
              "text": "Document treatment plan & obtain informed consent",
              "importance": "essential"
            }
          ]
        }
      ]
    },
    {
      "id": "phase2_pre_surgical",
      "title": "PHASE 2 — PRE-SURGICAL PREPARATION",
      "description": "Immediate pre-operative verification",
      "sections": [
        {
          "title": "Pre-Operative Verification",
          "isLabSection": false,
          "items": [
            {
              "id": "presurg_001",
              "text": "Verify implant components available (implant, cover screw, healing abutment)",
              "importance": "essential"
            },
            {
              "id": "presurg_002",
              "text": "Verify surgical guide if applicable",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "presurg_003",
              "text": "Confirm GBR materials availability",
              "importance": "essential",
              "conditions": {
                "boneAvailability": "insufficient"
              }
            },
            {
              "id": "presurg_004",
              "text": "Review medications & antibiotic prophylaxis",
              "importance": "essential"
            },
            {
              "id": "presurg_005",
              "text": "Confirm patient understanding & consent",
              "importance": "essential"
            }
          ]
        }
      ]
    },
    {
      "id": "phase3_surgical",
      "title": "PHASE 3 — SURGICAL PLACEMENT",
      "description": "Implant placement procedure",
      "sections": [
        {
          "title": "Surgical Execution",
          "isLabSection": false,
          "items": [
            {
              "id": "surg_001",
              "text": "Achieve adequate anesthesia & isolation",
              "importance": "essential"
            },
            {
              "id": "surg_002",
              "text": "Perform atraumatic extraction (if immediate placement)",
              "importance": "essential",
              "conditions": {
                "implantTiming": "immediate"
              }
            },
            {
              "id": "surg_003",
              "text": "Create osteotomy to planned depth & angulation",
              "importance": "essential"
            },
            {
              "id": "surg_004",
              "text": "Place implant at correct 3D position",
              "importance": "essential"
            },
            {
              "id": "surg_005",
              "text": "Verify primary stability (≥35 Ncm torque)",
              "importance": "essential"
            },
            {
              "id": "surg_006",
              "text": "Record insertion torque value",
              "importance": "advanced"
            },
            {
              "id": "surg_007",
              "text": "Perform GBR if indicated",
              "importance": "essential",
              "conditions": {
                "boneAvailability": "insufficient"
              }
            },
            {
              "id": "surg_008",
              "text": "Place healing abutment (if immediate loading)",
              "importance": "essential",
              "conditions": {
                "loadingProtocol": "immediate"
              }
            },
            {
              "id": "surg_009",
              "text": "Place cover screw (if submerged protocol)",
              "importance": "essential",
              "conditions": {
                "loadingProtocol": "delayed"
              }
            },
            {
              "id": "surg_010",
              "text": "Achieve tension-free soft tissue closure",
              "importance": "essential"
            },
            {
              "id": "surg_011",
              "text": "Take post-operative radiograph",
              "importance": "advanced"
            }
          ]
        }
      ]
    },
    {
      "id": "phase4_post_surgical",
      "title": "PHASE 4 — POST-SURGICAL CARE",
      "description": "Healing monitoring and management",
      "sections": [
        {
          "title": "Immediate Post-Op",
          "isLabSection": false,
          "items": [
            {
              "id": "postop_001",
              "text": "Provide post-operative care instructions",
              "importance": "essential"
            },
            {
              "id": "postop_002",
              "text": "Prescribe pain management & antibiotics (if indicated)",
              "importance": "essential"
            },
            {
              "id": "postop_003",
              "text": "Schedule 1-week follow-up",
              "importance": "essential"
            }
          ]
        },
        {
          "title": "Healing Monitoring",
          "isLabSection": false,
          "items": [
            {
              "id": "heal_001",
              "text": "Assess healing at 1 week (suture removal)",
              "importance": "essential"
            },
            {
              "id": "heal_002",
              "text": "Monitor osseointegration period (3-6 months)",
              "importance": "advanced"
            },
            {
              "id": "heal_003",
              "text": "Verify integration before prosthetic loading",
              "importance": "essential"
            }
          ]
        }
      ]
    },
    {
      "id": "phase5_prosthetic_planning",
      "title": "PHASE 5 — PROSTHETIC PLANNING",
      "description": "Restorative strategy development",
      "sections": [
        {
          "title": "Pre-Prosthetic Assessment",
          "isLabSection": false,
          "items": [
            {
              "id": "prost_plan_001",
              "text": "Confirm implant stability & osseointegration",
              "importance": "essential"
            },
            {
              "id": "prost_plan_002",
              "text": "Assess soft tissue maturity & emergence profile",
              "importance": "essential"
            },
            {
              "id": "prost_plan_003",
              "text": "Evaluate peri-implant mucosa health",
              "importance": "advanced"
            },
            {
              "id": "prost_plan_004",
              "text": "Perform soft tissue contouring if needed",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            }
          ]
        },
        {
          "title": "Prosthetic Strategy",
          "isLabSection": false,
          "items": [
            {
              "id": "prost_strat_001",
              "text": "Decide abutment type (stock vs custom)",
              "importance": "essential"
            },
            {
              "id": "prost_strat_002",
              "text": "Determine restoration material",
              "importance": "advanced"
            },
            {
              "id": "prost_strat_003",
              "text": "Plan emergence profile",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "prost_strat_004",
              "text": "Define margin location",
              "importance": "essential"
            },
            {
              "id": "prost_strat_005",
              "text": "Establish retention type (screw vs cement)",
              "importance": "advanced"
            },
            {
              "id": "prost_strat_006",
              "text": "Plan for provisionaliz ation if esthetic zone",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            }
          ]
        },
        {
          "title": "Lab Communication – Case Setup",
          "isLabSection": true,
          "items": [
            {
              "id": "lab_setup_001",
              "text": "Send pre-case consultation form to lab",
              "importance": "advanced"
            },
            {
              "id": "lab_setup_002",
              "text": "Communicate esthetic expectations to lab",
              "importance": "essential",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "lab_setup_003",
              "text": "Discuss margin location requirements",
              "importance": "advanced"
            },
            {
              "id": "lab_setup_004",
              "text": "Confirm turnaround time & remake policy",
              "importance": "advanced"
            }
          ]
        }
      ]
    },
    {
      "id": "phase6_impression",
      "title": "PHASE 6 — IMPRESSION & DATA CAPTURE",
      "description": "Prosthetic data acquisition",
      "sections": [
        {
          "title": "Impression Protocol",
          "isLabSection": false,
          "items": [
            {
              "id": "imp_001",
              "text": "Verify implant stability before impression",
              "importance": "essential"
            },
            {
              "id": "imp_002",
              "text": "Select impression method (digital / conventional)",
              "importance": "essential"
            },
            {
              "id": "imp_003",
              "text": "Confirm final abutment selection",
              "importance": "essential"
            },
            {
              "id": "imp_004",
              "text": "Perform tissue retraction if needed",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "imp_005",
              "text": "Capture accurate impression / scan",
              "importance": "essential"
            },
            {
              "id": "imp_006",
              "text": "Record bite & jaw relation (if needed)",
              "importance": "essential"
            },
            {
              "id": "imp_007",
              "text": "Document shade & esthetic parameters",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "imp_008",
              "text": "Capture baseline photography",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            }
          ]
        },
        {
          "title": "Lab Communication – Case Dispatch",
          "isLabSection": true,
          "items": [
            {
              "id": "lab_dispatch_001",
              "text": "Send complete lab prescription",
              "importance": "essential"
            },
            {
              "id": "lab_dispatch_002",
              "text": "Specify abutment & margin details",
              "importance": "advanced"
            },
            {
              "id": "lab_dispatch_003",
              "text": "Include esthetic parameters & photos",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "lab_dispatch_004",
              "text": "Define functional specs (occlusion, contacts)",
              "importance": "advanced"
            },
            {
              "id": "lab_dispatch_005",
              "text": "Schedule try-in appointment",
              "importance": "advanced"
            },
            {
              "id": "lab_dispatch_006",
              "text": "Confirm lab receipt of all materials",
              "importance": "advanced"
            }
          ]
        }
      ]
    },
    {
      "id": "phase7_try_in",
      "title": "PHASE 7 — TRY-IN & VERIFICATION",
      "description": "Quality assurance before final delivery",
      "sections": [
        {
          "title": "Lab Delivery & Quality Review",
          "isLabSection": false,
          "items": [
            {
              "id": "tryin_001",
              "text": "Inspect restoration fit on model",
              "importance": "essential"
            },
            {
              "id": "tryin_002",
              "text": "Check shade & contours under operatory light",
              "importance": "essential",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "tryin_003",
              "text": "Inspect for defects or margin discrepancies",
              "importance": "advanced"
            }
          ]
        },
        {
          "title": "Clinical Try-In",
          "isLabSection": false,
          "items": [
            {
              "id": "tryin_clin_001",
              "text": "Verify passive intraoral fit",
              "importance": "essential"
            },
            {
              "id": "tryin_clin_002",
              "text": "Check margins & seating accuracy",
              "importance": "essential"
            },
            {
              "id": "tryin_clin_003",
              "text": "Evaluate occlusion (static + dynamic)",
              "importance": "essential"
            },
            {
              "id": "tryin_clin_004",
              "text": "Assess esthetic outcome with patient",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            },
            {
              "id": "tryin_clin_005",
              "text": "Evaluate soft tissue response",
              "importance": "advanced"
            },
            {
              "id": "tryin_clin_006",
              "text": "Document any required adjustments",
              "importance": "advanced"
            }
          ]
        },
        {
          "title": "Lab Communication – Adjustments & Approval",
          "isLabSection": true,
          "items": [
            {
              "id": "lab_adjust_001",
              "text": "Communicate adjustments to lab if needed",
              "importance": "advanced"
            },
            {
              "id": "lab_adjust_002",
              "text": "Approve or request lab modification",
              "importance": "essential"
            },
            {
              "id": "lab_adjust_003",
              "text": "Confirm final occlusal requirements",
              "importance": "advanced"
            },
            {
              "id": "lab_adjust_004",
              "text": "Establish final delivery timeline",
              "importance": "advanced"
            }
          ]
        }
      ]
    },
    {
      "id": "phase8_final_delivery",
      "title": "PHASE 8 — FINAL DELIVERY & MAINTENANCE",
      "description": "Permanent restoration delivery & long-term care",
      "sections": [
        {
          "title": "Final Cementation & Seating",
          "isLabSection": false,
          "items": [
            {
              "id": "final_001",
              "text": "Achieve isolation & dryness before cementation",
              "importance": "essential"
            },
            {
              "id": "final_002",
              "text": "Use correct cement & controlled cement volume",
              "importance": "essential"
            },
            {
              "id": "final_003",
              "text": "Clean abutment surface before cementation",
              "importance": "advanced"
            },
            {
              "id": "final_004",
              "text": "Seat restoration with proper alignment",
              "importance": "advanced"
            },
            {
              "id": "final_005",
              "text": "Remove all excess cement",
              "importance": "essential"
            },
            {
              "id": "final_006",
              "text": "Perform ultrasonic margin cleaning",
              "importance": "advanced"
            },
            {
              "id": "final_007",
              "text": "Radiographically confirm cement-free margins",
              "importance": "essential"
            },
            {
              "id": "final_008",
              "text": "Final occlusal verification",
              "importance": "essential"
            }
          ]
        },
        {
          "title": "Immediate Post-Delivery Assessment",
          "isLabSection": false,
          "items": [
            {
              "id": "postdel_001",
              "text": "Assess patient comfort & phonetics",
              "importance": "advanced"
            },
            {
              "id": "postdel_002",
              "text": "Verify mastication & dynamic occlusion",
              "importance": "advanced"
            },
            {
              "id": "postdel_003",
              "text": "Check for sensitivity or high contacts",
              "importance": "advanced"
            },
            {
              "id": "postdel_004",
              "text": "Confirm patient esthetic satisfaction",
              "importance": "advanced",
              "conditions": {
                "estheticZone": "high"
              }
            }
          ]
        },
        {
          "title": "Patient Education & Care Instructions",
          "isLabSection": false,
          "items": [
            {
              "id": "edu_001",
              "text": "Provide patient home-care instructions",
              "importance": "essential"
            },
            {
              "id": "edu_002",
              "text": "Demonstrate interdental cleaning technique",
              "importance": "advanced"
            },
            {
              "id": "edu_003",
              "text": "Discuss chewing precautions & dietary guidance",
              "importance": "advanced"
            },
            {
              "id": "edu_004",
              "text": "Provide written care instructions",
              "importance": "advanced"
            },
            {
              "id": "edu_005",
              "text": "Counsel on smoking cessation if applicable",
              "importance": "advanced"
            },
            {
              "id": "edu_006",
              "text": "Provide emergency contact information",
              "importance": "advanced"
            }
          ]
        },
        {
          "title": "Follow-Up & Long-Term Monitoring",
          "isLabSection": false,
          "items": [
            {
              "id": "followup_001",
              "text": "Schedule follow-up visit (1-2 weeks)",
              "importance": "essential"
            },
            {
              "id": "followup_002",
              "text": "Plan 3-month evaluation",
              "importance": "advanced"
            },
            {
              "id": "followup_003",
              "text": "Schedule annual radiographs",
              "importance": "advanced"
            },
            {
              "id": "followup_004",
              "text": "Establish recall interval for maintenance",
              "importance": "advanced"
            },
            {
              "id": "followup_005",
              "text": "Document baseline probing depths",
              "importance": "advanced"
            },
            {
              "id": "followup_006",
              "text": "Plan long-term maintenance protocol",
              "importance": "advanced"
            }
          ]
        }
      ]
    }
  ]
